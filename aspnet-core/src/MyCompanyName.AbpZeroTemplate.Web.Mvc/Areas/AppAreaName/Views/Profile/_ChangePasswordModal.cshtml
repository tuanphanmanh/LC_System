@using MyCompanyName.AbpZeroTemplate.Web.Areas.AppAreaName.Models.Common.Modals
@await Html.PartialAsync("~/Areas/AppAreaName/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("ChangePassword")))

<div class="modal-body">
    <form name="ChangePasswordModalForm" class="form">
        <div class="mb-5" data-kt-password-meter="true">
            <label for="CurrentPassword" class="form-label required">@L("CurrentPassword")</label>
            <div class="position-relative mb-3">
                <input id="CurrentPassword" type="password" autocomplete="new-password" name="CurrentPassword" class="form-control" required maxlength="@MyCompanyName.AbpZeroTemplate.Authorization.Users.User.MaxPlainPasswordLength">
                <!--begin::Visibility toggle-->
                <span class="btn btn-sm btn-icon position-absolute translate-middle top-50 end-0 me-n2"
                      data-kt-password-meter-control="visibility">
                    <i class="fas fa-eye-slash fs-4"><span class="path1"></span><span class="path2"></span><span class="path3"></span><span class="path4"></span></i>
                    <i class="fas fa-eye d-none fs-4"><span class="path1"></span><span class="path2"></span><span class="path3"></span></i>
                </span>
                <!--end::Visibility toggle-->
            </div>
            <span class="form-text text-muted">@Html.Raw(L("PasswordChangeDontRememberMessage", "<a href=\"" + Url.Action("ForgotPassword", "Account", new {area = ""}) + "\">" + L("ClickHere") + "</a>"))</span>
        </div>
        <div class="mb-5" data-kt-password-meter="true">
            <label for="NewPassword" class="form-label required">@L("NewPassword")</label>
            <div class="position-relative mb-3">
                <input id="NewPassword" type="password" autocomplete="new-password" name="NewPassword" class="form-control" required>
                <!--begin::Visibility toggle-->
                <span class="btn btn-sm btn-icon position-absolute translate-middle top-50 end-0 me-n2"
                      data-kt-password-meter-control="visibility">
                    <i class="fas fa-eye-slash fs-4"><span class="path1"></span><span class="path2"></span><span class="path3"></span><span class="path4"></span></i>
                    <i class="fas fa-eye d-none fs-4"><span class="path1"></span><span class="path2"></span><span class="path3"></span></i>
                </span>
                <!--end::Visibility toggle-->
            </div>
        </div>
        <div class="mb-5" data-kt-password-meter="true">
            <label for="NewPasswordRepeat" class="form-label required">@L("NewPasswordRepeat")</label>
            <div class="position-relative mb-3">
                <input id="NewPasswordRepeat" type="password" autocomplete="new-password" name="NewPasswordRepeat" class="form-control" required equalto="#NewPassword">
                <!--begin::Visibility toggle-->
                <span class="btn btn-sm btn-icon position-absolute translate-middle top-50 end-0 me-n2"
                      data-kt-password-meter-control="visibility">
                    <i class="fas fa-eye-slash fs-4"><span class="path1"></span><span class="path2"></span><span class="path3"></span><span class="path4"></span></i>
                    <i class="fas fa-eye d-none fs-4"><span class="path1"></span><span class="path2"></span><span class="path3"></span></i>
                </span>
                <!--end::Visibility toggle-->
            </div>
        </div>
    </form>
</div>

@await Html.PartialAsync("~/Areas/AppAreaName/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
