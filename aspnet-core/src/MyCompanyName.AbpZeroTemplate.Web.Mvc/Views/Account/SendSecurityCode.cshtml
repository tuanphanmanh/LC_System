@using MyCompanyName.AbpZeroTemplate.Localization
@model MyCompanyName.AbpZeroTemplate.Web.Models.Account.SendSecurityCodeViewModel

<div class="login-form">
    <div class="pb-13 pt-lg-0 pt-5">
        <h3 class="fw-bolder text-dark fs-4 fs-1-lg">@L("SendSecurityCode")</h3>
    </div>
    <form class="form" asp-action="SendSecurityCode" method="post">
        <p>@L("SendSecurityCode_Information")</p>

        @Html.Hidden("returnUrl", Model.ReturnUrl)
        @Html.Hidden("rememberMe", @Model.RememberMe)

        <div class="mb-5">
            @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers, new {@class = "form-control form-control-solid h-auto py-7 px-6 rounded-lg fs-6", size = 1})
        </div>

        <div class="pb-lg-0 pb-5">
            <span>&nbsp;</span>
            <input type="submit" class="btn btn-primary fw-bolder fs-6 px-8 py-4 my-3 me-3" value="@L("Submit")"/>
        </div>
    </form>
</div>
