@using MyCompanyName.AbpZeroTemplate.Localization
@{
    Layout = "~/Views/Account/_Layout.cshtml";
    ViewBag.DisableTenantChange = true;
}

@section Scripts
{
    <script abp-src="/view-resources/Views/Stripe/PostPayment.js" asp-append-version="true"></script>
}

@section Styles{
    <link href="~/view-resources/Views/Payment/Stripe/PostPayment.css" rel="stylesheet"/>
}

<input type="hidden" id="paymentId" value="@ViewBag.PaymentId"/>
<div class="login-form align-middle m-0" style="height: 250px">
    <div class="pb-13 pt-lg-0 pt-5">
        <h3 class="fw-bolder text-dark fs-4 fs-1-lg text-center">@L("PleaseWait")</h3>
        <p class="text-muted fw-bold fs-4 text-center">
            @L("ReceivingPaymentResult") @L("PleaseWait")
        </p>
    </div>
    <div id="loading" class=" my-5">&emsp;</div>
</div>
