@using MyCompanyName.AbpZeroTemplate.Localization
@{
    Layout = "~/Views/Account/_Layout.cshtml";
    ViewBag.DisableTenantChange = true;
}

@section Styles{
    <link rel="stylesheet" abp-href="~/view-resources/Views/Payment/Payment.css" />
}

<div class="login-form align-middle m-0" style="height: 350px">
    <div class="d-flex align-items-center justify-content-center flex-column h-100 w-100">
        <div class="mb-5">&emsp;<i class="fas fa-check fa-5x text-success"></i></div>
        <h3 class="fw-bolder text-dark fs-4 fs-1-lg">@L("ThankYou")</h3>
        <p class="text-muted fw-bold fs-4">
            @L("YourPaymentHasBeenFailed")
        </p>

        <a class="btn btn-info mt-5" href="@Url.Action("Index", "SubscriptionManagement", new {Area = "AppAreaName"})"> @L("GoToSubscriptionManagement")</a>
    </div>
</div>
